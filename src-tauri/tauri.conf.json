{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZenSTAC",
  "version": "1.0.0",
  "identifier": "com.earthallabs.zenstac",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ZenSTAC",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright (c) 2025 Earthal Labs",
    "category": "DeveloperTool",
    "shortDescription": "A lightweight STAC server for managing spatial data",
    "longDescription": "ZenSTAC is a powerful yet lightweight STAC (SpatioTemporal Asset Catalog) server for managing, viewing, and analyzing spatial data."
  }
}
